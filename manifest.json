{
    "manifest_version": 2,
    "name": "Herrera Highlight",
    "description": "Highlights matches on the current page",
    "version": "0.1",
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Herrera Highlight"
    },
    "permissions": [
        "activeTab"
    ],
    "web_accessible_resources": [
        "styles/content.css"
    ]
}
